<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Investify</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/slate/bootstrap.rtl.min.css" />

    <!-- ✅ DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/colreorder/1.6.2/css/colReorder.dataTables.min.css" />

    <!-- ✅ Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Investify.styles.css" asp-append-version="true" />

    <style>
      /*   body {
            direction: rtl;
            text-align: right;
        } */

.navbar .nav-link {
    color: #e0e0e0 !important;
    font-weight: bold;
    margin-right: 10px;
}
.navbar .nav-link.active {
    color: #ffffff !important;
}
        .navbar-brand {
            color: #ffffff !important;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .container, .container-fluid {
            padding-right: 20px;
            padding-left: 20px;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand ms-auto" asp-controller="Home" asp-action="Index">Investify</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Portfolio" asp-action="Index">المحافظ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Stock" asp-action="Index">الأسهم</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="@ViewBag.ContainerClass ?? " container"">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Investify - <a asp-area="" asp-controller="Home" asp-action="Privacy">سياسة الخصوصية</a>
        </div>
    </footer>

    <!-- ✅ Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ DataTables Scripts -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/colreorder/1.6.2/js/dataTables.colReorder.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
